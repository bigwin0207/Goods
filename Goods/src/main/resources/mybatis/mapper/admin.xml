<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goods.g1.dao.AdminDAO">
    <select id="getMemberList" resultType="com.goods.g1.dto.MemberDTO">
        select * from member_view order by indate desc limit #{limit} offset #{offset}
    </select>
    
    <select id="getMemberTotal" resultType="int">
    	select count(*) from member
    </select>
    
    <select id="getQnaList" resultType="com.goods.g1.dto.QnaDTO">
        select * from qna order by qseq desc limit #{limit} offset #{offset}
    </select>
    
    <select id="getQnaTotal" resultType="int">
    	select count(*) from qna
    </select>
    
    <select id="getReviewList" resultType="com.goods.g1.dto.ReviewDTO">
        select * from review order by rseq desc limit #{limit} offset #{offset}
    </select>
    
    <select id="getReviewTotal" resultType="int">
    	select count(*) from review
    </select>
    
    <select id="getNoticeList" resultType="com.goods.g1.dto.NoticeDTO">
        select * from notice order by nseq desc limit #{limit} offset #{offset}
    </select>
    
    <select id="getNoticeTotal" resultType="int">
    	select count(*) from notice
    </select>
</mapper>